{
	"extends": ["eslint:recommended", "plugin:jest/recommended"],
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"node": true
	},
	"rules": {
		"no-mixed-spaces-and-tabs": ["warn", "smart-tabs"]
	},
	"overrides": [
		{
			"files": ["{packages,examples}/**/*.{ts,tsx}"],
			"parser": "@typescript-eslint/parser",
			"parserOptions": {
				"sourceType": "module",
				"ecmaVersion": 2015
			},
			"rules": {
				"no-unused-vars": 0
			}
		},
		{
			"files": ["packages/vue-styleguidist/**/*.{ts,tsx,vue}"],
			"parser": "@typescript-eslint/parser",
			"parserOptions": {
				"ecmaVersion": 2018,
				"sourceType": "module"
			},
			"plugins": ["@typescript-eslint"]
		},
		{
			"files": ["**/vue-docgen-api/**"],
			"env": {
				"es6": true
			},
			"rules": {
				"compat/compat": "off"
			}
		}
	],
	"globals": {
		"System": false,
		"classes": false,
		"shallow": false,
		"render": false,
		"mount": false,
		"cy": false
	}
}
